                    <!-- Twitter feeds End -->
                </div>
                <!-- Column One End -->
                <!-- Column Two Start -->
                <div class="col2">
                    <!-- Latest News Start -->
                    <div class="latest-news noback">
                    	<h1 class="heading colr">Latest releases</h1>
                        <ul class="news-list">
                          <% @latest_releases.each do |release| %>
                        	<li>
                            	<div class="thumb">                                
                                	<a href="<%= release_path(release) %>">
                                    <%= image_tag(release.artwork.image.thumb('120x104#').url) if release.artwork %>
                                    <span>VEIW</span>
                                  </a>
                                </div>
                                <div class="desc">
                                	<h4><%= link_to release.name, release_path(release), class: "white" %></h4>
                                    <p class="post-opts"><%= artists_links release.artists %></p>
                                    <p><%= release.genres %><br /></p>
                                </div>
                            </li>
                            <% end %>
                        </ul>
                        <a href="<%= releases_path %>" class="buttonone">View All Releases</a>
                    </div>
                    <!-- Latest News End -->
                </div>
                <!-- Column Two End -->
                <!-- Column One Start -->
                <div class="col1 hidemobile">
                    <!-- Facebook Start -->
                    <div class="widget facebook">
                        <a href="#"><img src="/assets/soundrock/facebook.jpg" alt="" /></a>
                    </div>
                    <!-- Facebook End -->
                    <!-- Newsletter Start -->
                    <div class="widget newsletter noback">
                    	<h1 class="heading colr">Weekly Newsletter</h1>
                        <input type="text" value="Enter your valid email address" />
                        <button>SUBMIT</button>
                    </div>
                    <!-- Newsletter End -->
